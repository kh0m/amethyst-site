<!DOCTYPE html>
<html>
<head>
  <title>Amethyst</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if current_user %>
  <p>You are logged in as: <%= current_user.email %>
  <%= button_to "Logout", logout_url, method: 'delete' %>
  <p>Your role: <%= current_user.role %></p>
  <%= button_to "Home", user_path(current_user), method: :get %></p>
<% end %>

<%= yield %>


</body>
</html>
