
<div id="container" style="min-width: 310px; height: 400px; margin: 22px auto"></div>
<div class="row">
  <div class= "col-md-4"></div>
  <div class= "col-md-4">
  <div id="sliders">
      <table class="table">
          <tr>
          	<td>Alpha Angle</td>
          	<td><input id="alpha" type="range" min="0" max="45" value="15"/> <span id="alpha-value" class="value"></span></td>
          </tr>
          <tr>
          	<td>Beta Angle</td>
          	<td><input id="beta" type="range" min="-45" max="45" value="15"/> <span id="beta-value" class="value"></span></td>
          </tr>
          <tr>
          	<td>Depth</td>
          	<td><input id="depth" type="range" min="20" max="100" value="50"/> <span id="depth-value" class="value"></span></td>
          </tr>
      </table>
  </div>
  </div>
  <div class= "col-md-4"></div>
</div>

<h2>Courses</h2>

<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th>Path</th>
    <th>Users</th>
    <th colspan="2"></th>
  </tr>
  <% @courses.each do |course| %>
    <tr>
      <td><%= course.title %></td>
      <td><%= course.file %></td>
      <td><%= course.users.count %></td>
      <td><%= link_to 'Show', course_path(course) %></td>
      <td><%= link_to 'Destroy', course_path(course),
        method: :delete,
        data: { confirm: 'Are you sure?' }  %></td>
    </tr>
  <% end %>
</table>

<br/>
<%= button_to "Add Course", new_course_path, {method: :get} %>
