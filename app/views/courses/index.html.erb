<h1>Courses</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Path</th>
    <th>Users</th>
  </tr>
  <% @courses.each do |course| %>
    <tr>
      <td><%= course.title %></td>
      <td><%= course.file %></td>
      <td><%= course.users.count %></td>
      <td><%= link_to 'Show', course_path(course) %></td>
      <td><%= link_to 'Destroy', course_path(course),
        method: :delete,
        data: { confirm: 'Are you sure?' }  %></td>
    </tr>
  <% end %>
</table>

<br/>
<%= button_to "Add Course", new_course_path, {method: :get} %>
