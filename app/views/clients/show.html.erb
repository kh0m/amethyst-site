<h1>
  <%= @client.name %>
</h1>

<h2>Courses</h2>

<table>
  <tr>
    <th>Id:</th>
    <th>Title:</th>
    <th>Text:</th>
  </tr>
  <% @client.courses.each do |course| %>
    <tr>
      <td><%= course.id %></td>
      <td><%= course.title %></td>
      <td><%= course.text %></td>
      <td><%= link_to 'Show', :courses %></td>

    </tr>
  <% end %>
</table>


<h2>Add course:</h2>
<%= form_for ([@client, @client.courses.build]) do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_area :title %>
  </p>
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<%end%>

<%= link_to 'Back', clients_path %>
