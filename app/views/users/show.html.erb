<h1>User Page</h1>


<h2>Welcome, <%=@user.email%>!</h2>

<h3>Your role: <%=@user.role%></h3>
<h3>Your assigned courses:</h3>

<% @user.courses.each do |c| %>
  <ul>
    <li><%= c.title %></li>
    <li><%= c.file %></li>
  </ul>
<% end %>

<% if current_user && (current_user.manager? || current_user.admin?) %>
  <%= button_to "Add Course", new_course_path, { method: :get } %>
<% end %>
